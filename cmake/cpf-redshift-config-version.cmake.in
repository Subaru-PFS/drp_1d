SET( PACKAGE_VERSION @VERSION@)

STRING( REPLACE "." ";" VERSION_LIST @VERSION@ )

LIST( GET VERSION_LIST 0 PROGRAM_VERSION_MAJOR )
LIST( GET VERSION_LIST 1 PROGRAM_VERSION_MINOR )
LIST( GET VERSION_LIST 2 PROGRAM_VERSION_PATCH )

IF( "${PACKAGE_FIND_VERSION_MAJOR}" EQUAL "${PROGRAM_VERSION_MAJOR}" )

    IF( "${PACKAGE_FIND_VERSION_MINOR}" EQUAL "${PROGRAM_VERSION_MINOR}" )

        SET( PACKAGE_VERSION_COMPATIBLE 1)
        MESSAGE( STATUS "Using cpf-redshift @VERSION@" )

        IF( "${PACKAGE_FIND_VERSION_PATCH}" EQUAL "${PROGRAM_VERSION_PATCH}" )

            SET( PACKAGE_VERSION_EXACT 1)

        ENDIF( "${PACKAGE_FIND_VERSION_PATCH}" EQUAL "${PROGRAM_VERSION_PATCH}" )

    ENDIF( "${PACKAGE_FIND_VERSION_MINOR}" EQUAL "${PROGRAM_VERSION_MINOR}" )

ENDIF( "${PACKAGE_FIND_VERSION_MAJOR}" EQUAL "${PROGRAM_VERSION_MAJOR}" )
